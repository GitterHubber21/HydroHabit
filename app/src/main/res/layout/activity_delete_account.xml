<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout_account_delete"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3b86d6"
    android:padding="32dp">
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_back_arrow" />
    <TextView
        android:id="@+id/resetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your password"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:gravity="center" />
    <LinearLayout
        android:id="@+id/passwordInput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetTitle"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_transparent_square"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Password"
            android:textColorHint="#CCFFFFFF"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/text_cursor_drawable"/>

        <ImageView
            android:id="@+id/passwordToggleFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visible"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/passwordInputAgain_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordInput_layout"
        android:background="@drawable/rounded_transparent_square"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/passwordInputAgain"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Password again"
            android:textColorHint="#CCFFFFFF"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:padding="16dp"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/text_cursor_drawable"/>
        <ImageView
            android:id="@+id/passwordToggleSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_visible"
            android:clickable="true"
            android:focusable="true"
            android:padding="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/enterButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/passwordInputAgain_layout"
        android:layout_marginTop="40dp"
        android:text="Enter"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/rounded_transparent_square_challenge" />


</RelativeLayout>