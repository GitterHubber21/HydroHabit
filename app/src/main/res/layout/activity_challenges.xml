<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#7fb3d5"
    tools:context=".ChallengesActivity">

    <com.example.hydrohabit.RainView
        android:id="@+id/rainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dosis_bold"
        android:text="@string/challenges"
        android:textColor="#ffffff"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:contentDescription="@string/settings"
        android:src="@drawable/ic_settings"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="4dp"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/settingsIcon"
        android:layout_above="@+id/bottomNavigationView">

        <TextView
            android:id="@+id/dailyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#3b86d6"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:translationY="20dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardContainer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:id="@+id/card1_container"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:alpha="0"
                android:translationX="-100dp"
                android:translationY="-400dp"
                android:rotation="15"
                android:scaleX="0.3"
                android:scaleY="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <include
                    android:id="@+id/card1"
                    layout="@layout/flip_card" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card2_container"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:alpha="0"
                android:translationX="-100dp"
                android:translationY="-400dp"
                android:rotation="15"
                android:scaleX="0.3"
                android:scaleY="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    android:id="@+id/card2"
                    layout="@layout/flip_card" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card3_container"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:alpha="0"
                android:translationX="-100dp"
                android:translationY="-400dp"
                android:rotation="15"
                android:scaleX="0.3"
                android:scaleY="0.3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <include
                    android:id="@+id/card3"
                    layout="@layout/flip_card" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/card4_container"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:alpha="0"
                android:translationX="-100dp"
                android:translationY="-400dp"
                android:rotation="15"
                android:scaleX="0.3"
                android:scaleY="0.3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <include
                    android:id="@+id/card4"
                    layout="@layout/flip_card" />
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/monthlyTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#3b86d6"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:translationY="20dp" />

        <TextView
            android:id="@+id/monthlyChallengeDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Complete your daily goal every day in July."
            android:gravity="center"
            android:background="@drawable/rounded_transparent_square_challenge"
            android:textColor="@android:color/white"
            android:focusable="true"
            android:clickable="true"
            android:alpha="0"
            android:translationY="20dp"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_background"
        app:menu="@menu/bottom_nav_menu"
        android:elevation="5dp"
        app:itemIconTint="@null"
        app:itemTextColor="@drawable/bottom_nav_item_color"
        app:labelVisibilityMode="unlabeled"
        app:itemIconSize="40dp"
        app:itemPaddingTop="8dp"
        app:itemPaddingBottom="8dp" />

</RelativeLayout>