<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goal_change_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_blue_square"
    android:gravity="center"
    android:layout_gravity="center"
    android:minWidth="300dp">

    <TextView
        android:id="@+id/goal_logout_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is your next goal?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAlignment="center" />
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:padding="5dp">

        <EditText
            android:id="@+id/goal_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Enter goal"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textColorHint="#AAFFFFFF"
            android:background="@android:color/transparent"
            />
        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ml_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ml"
            android:textColor="#FFFFFF"
            android:textAlignment="textStart"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/rounded_popup_square_no"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/button_set"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Set"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/rounded_popup_square_set"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>
</LinearLayout>